{
  "compilerOptions": {
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "module": "ESNext",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*", "eslint.config.ts"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
